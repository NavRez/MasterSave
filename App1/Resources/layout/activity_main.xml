
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gradientblue"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical">
   
    <EditText
        android:id="@+id/EditTextInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Capture Bill"
        android:gravity="center"
        android:cursorVisible="true" />
    <ImageButton
        android:src="@mipmap/cameraandroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraButton"
        android:layout_marginTop="0.0dp"
        android:layout_marginLeft="150.5dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="158.2dp"
        android:layout_marginBottom="14.5dp" 
        />
    <EditText
        android:id="@+id/EditTextInput2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraButton"
        android:focusable="false"
        android:text="Observe Monthly Bills"
        android:gravity="center"
        android:cursorVisible="true"/>
    <ImageButton
        android:src="@mipmap/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarButton"
        android:layout_marginTop="0.0dp"
        android:layout_marginLeft="150.0dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="130.5dp"
        android:layout_marginBottom="19.0dp" 
        />
    <EditText
        android:id="@+id/EditTextInput3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarButton"
        android:focusable="false"
        android:text="Setup Calendar View"
        android:gravity="center"
        android:cursorVisible="true"/>
    <ImageButton
        android:src="@mipmap/settingapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsbutton"
        android:layout_marginTop=".5dp"
        android:layout_marginLeft="150.0dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="130.5dp"
        android:layout_marginBottom="0.0dp" 
        />
</LinearLayout>