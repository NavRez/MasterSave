
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_list"
    android:minWidth="25px"
    android:minHeight="25px">

    <EditText
        android:id="@+id/EditTextInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Capture Bill"
        android:gravity="center"
        android:cursorVisible="true">
    </EditText>

    <ImageButton
        android:src="@mipmap/cameraicon"
        android:layout_width="149.0dp"
        android:layout_height="104.0dp"
        android:id="@+id/cameraButton"
        android:layout_marginTop="44.5dp"
        android:layout_marginLeft="116.5dp"
        android:background="@android:color/holo_red_light"
        android:layout_marginRight="95.0dp"
        android:layout_marginBottom="14.5dp" 
        />

    <EditText
        android:id="@+id/EditTextInput2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraButton"
        android:focusable="false"
        android:text="Observe Monthly Bills"
        android:gravity="center"
        android:cursorVisible="true">
    </EditText>

    <ImageButton
        android:src="@mipmap/calendaricon"
        android:layout_width="149.0dp"
        android:layout_height="104.0dp"
        android:id="@+id/calendarButton"
        android:layout_marginTop="205.5dp"
        android:layout_marginLeft="120.0dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginRight="102.5dp"
        android:layout_marginBottom="19.0dp" 
        />
    <EditText
        android:id="@+id/EditTextInput3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarButton"
        android:focusable="false"
        android:text="Setup Calendar View"
        android:gravity="center"
        android:cursorVisible="true">
    </EditText>
    <ImageButton
        android:src="@mipmap/toolbaricon"
        android:layout_width="149.0dp"
        android:layout_height="104.0dp"
        android:id="@+id/settingsbutton"
        android:layout_marginTop="369.5dp"
        android:layout_marginLeft="120.0dp"
        android:background="@android:color/holo_green_light"
        android:layout_marginRight="102.5dp"
        android:layout_marginBottom="61.0dp" 
        />
</RelativeLayout>